<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enabled and Checked -->
    <item android:color="?attr/colorPrimary" android:state_checked="true" android:state_enabled="true"/>
    <!-- Enabled and Unchecked -->
    <item android:color="?attr/colorOutline" android:state_checked="false" android:state_enabled="true"/>
    <!-- Disabled and Checked -->
    <item android:color="?attr/colorOnSurface" android:alpha="0.12" android:state_checked="true" android:state_enabled="false"/>
    <!-- Disabled and Unchecked -->
    <item android:color="?attr/colorOnSurface" android:alpha="0.38" android:state_checked="false" android:state_enabled="false"/>
</selector>